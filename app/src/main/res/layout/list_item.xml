<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <TextView
        android:id="@+id/pastDrink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="34dp"
        android:ellipsize="end"
        android:lineSpacingExtra="8dp"
        android:maxLines="4"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/historyFav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_wrapBehaviorInParent="horizontal_only" />

    <Button
        android:id="@+id/historyFav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D5C5B8"
        android:drawableLeft="@drawable/save_to_fav_icon"
        android:gravity="center_horizontal"
        android:padding="26dp"
        app:layout_constraintBottom_toTopOf="@+id/historyRe"
        app:layout_constraintEnd_toEndOf="@+id/historyRe"
        app:layout_constraintStart_toStartOf="@+id/historyRe"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/historyRe"
        android:layout_width="90dp"
        android:backgroundTint="#D5C5B8"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="3dp"
        android:drawableLeft="@drawable/redo_icon"
        android:gravity="center_horizontal"
        android:padding="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyFav" />
</androidx.constraintlayout.widget.ConstraintLayout>