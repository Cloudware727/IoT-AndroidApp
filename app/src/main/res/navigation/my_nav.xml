<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/account_screen">  <!-- Set Login as Start -->

    <!-- Login Screen (Account) -->
    <fragment
        android:id="@+id/account_screen"
        android:name="com.example.iot_android_app.account_screen"
        android:label="fragment_account_screen"
        tools:layout="@layout/fragment_account_screen">

        <!-- Navigate to Sign Up -->
        <action
            android:id="@+id/action_accountScreen_to_signUpScreen"
            app:destination="@id/sign_up_screen"/>
    </fragment>

    <!-- Sign-Up Screen -->
    <fragment
        android:id="@+id/sign_up_screen"
        android:name="com.example.iot_android_app.sign_up_screen"
        android:label="fragment_sign_up_screen"
        tools:layout="@layout/fragment_sign_up">

        <!-- Navigate back to Login -->
        <action
            android:id="@+id/action_signUpScreen_to_accountScreen"
            app:destination="@id/account_screen"/>
    </fragment>

    <!-- Other Screens -->
    <fragment
        android:id="@+id/home_screen"
        android:name="com.example.iot_android_app.home_screen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" />

    <fragment
        android:id="@+id/fav_screen"
        android:name="com.example.iot_android_app.fav_screen"
        android:label="fragment_fav_screen"
        tools:layout="@layout/fragment_fav_screen" />

    <fragment
        android:id="@+id/history_screen"
        android:name="com.example.iot_android_app.history_screen"
        android:label="fragment_history_screen"
        tools:layout="@layout/fragment_history_screen" />
</navigation>
